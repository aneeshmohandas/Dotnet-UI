<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFrameworks>netcoreapp3.1;net5.0;net8.0;</TargetFrameworks>
    <OutputType>Exe</OutputType>
    <IsPackable>true</IsPackable> 
    <PackAsTool>true</PackAsTool>
    <ToolCommandName>ui</ToolCommandName>
    <PackageOutputPath>./nupkg</PackageOutputPath>
    <Authors>Aneesh M</Authors>
    <PackageTags>CLI;UI;DOTNET CLI UI;</PackageTags>
    <PackageProjectUrl>https://github.com/aneeshmohandas/Dotnet-UI</PackageProjectUrl>
    <PublishRepositoryUrl>true</PublishRepositoryUrl>
		<RepositoryUrl>https://github.com/aneeshmohandas/Dotnet-UI</RepositoryUrl>
		<RepositoryType>git</RepositoryType>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.SpaServices" Version="3.1.16" />
    <PackageReference Include="Microsoft.AspNetCore.SpaServices.Extensions" Version="3.1.16" />
    <PackageReference Include="Newtonsoft.Json" Version="13.0.1" />
    <PackageReference Include="Swashbuckle.AspNetCore" Version="5.6.3" />
  </ItemGroup>

</Project>
